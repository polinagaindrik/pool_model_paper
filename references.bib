@article{bernaertsConceptsToolsPredictive2004,
  title = {Concepts and {{Tools}} for {{Predictive Modeling}} of {{Microbial Dynamics}}},
  author = {BERNAERTS, {\relax KRISTEL} and DENS, {\relax ELS} and VEREECKEN, {\relax KAREN} and GEERAERD, ANNEMIE H. and STANDAERT, ARNOUT R. and DEVLIEGHERE, {\relax FRANK} and DEBEVERE, {\relax JOHAN} and VAN IMPE, JAN F.},
  year = {2004},
