	urldate = {2022-10-10},
	journal = {Journal of Food Protection},
	author = {BERNAERTS, KRISTEL and DENS, ELS and VEREECKEN, KAREN and GEERAERD, ANNEMIE H. and STANDAERT, ARNOUT R. and DEVLIEGHERE, FRANK and DEBEVERE, JOHAN and VAN IMPE, JAN F.},
