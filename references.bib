	author = {Swinnen, I. A. M. and Bernaerts, K. and Dens, E. J. J. and Geeraerd, A. H. and Van Impe, J. F.},
	month = jul,
	year = {2004},
	keywords = {Predictive microbiology, Modelling, Culture history, Lag phase, Temperature},
	pages = {137--159},
